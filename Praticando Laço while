//1.Crie um programa que solicite ao usuário que insira um número. Em seguida, o programa deve imprimir a tabuada de multiplicação desse número de 1 a 10.
let num = prompt('Digite um número');
let cont = 1;

while (cont <= 10) {
    let result = num * cont;
    console.log(num + "x" + cont + "=" + result);
    cont = cont + 1;
}

//2- Escreva um programa que solicite ao usuário que insira números inteiros positivos.
// O programa deve somar apenas os números pares inseridos até que o usuário insira um número negativo. Ao final, deve imprimir a soma.

let numero = parseInt(prompt("Digite um número: "));
let soma = 0;

for (let i = 0; i <= numero; i++) {
    if (i % 2 === 0) {
        soma += i;
    }
    if (i === numero) {
        console.log(`A soma dos números pares inseridos é ${soma}.`);
    }
}
